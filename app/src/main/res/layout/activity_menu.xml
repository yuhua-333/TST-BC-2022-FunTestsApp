<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b2"
    android:id="@+id/RelativeLayout1"   >
    <Button
        android:id="@+id/quce"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_circle"
        android:text="趣测集"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35sp" />
    <Button
        android:id="@+id/part1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle"
        android:gravity="center"
        android:text="菜单"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/part2"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/part1"
        android:background="@drawable/shape_circle_green"
        android:drawableStart="@drawable/button_pic"
        android:gravity="center"
        android:text="心理\n测试"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <Button
        android:id="@+id/part3"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/part1"
        android:background="@drawable/shape_circle_red"
        android:drawableStart="@drawable/button_pic2"
        android:gravity="center"
        android:text="树洞\n吐槽"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <Button
        android:id="@+id/part4"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_above="@id/part1"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle_yellow"
        android:drawableStart="@drawable/button_pic3"
        android:gravity="center"
        android:text="体脂\n测试"
        android:textColor="@color/black"
        android:textSize="19sp" />

            <!-- 在中间图片的下面 -->
    <Button
        android:id="@+id/part5"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_below="@id/part1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_circle_pink"
        android:drawableStart="@drawable/button_pic4"
        android:gravity="center"
        android:text="塔罗牌\n测试"
        android:textColor="@color/black"
        android:textSize="19sp" />

</RelativeLayout>